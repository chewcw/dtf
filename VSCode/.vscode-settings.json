  "vim.normalModeKeyBindings": [
    {
      "before": [ "<leader>", "b", "t" ],
      "commands": [
        "bookmarks.toggle"
      ]
    },
    {
      "before": [ "<leader>", "b", "p" ],
      "commands": [
        "bookmarks.jumpToPrevious"
      ]
    },
    {
      "before": [ "<leader>", "b", "n" ],
      "commands": [
        "bookmarks.jumpToNext"
      ]
    },
    {
      "before": [ "<leader>", "b", "c" ],
      "commands": [
        "bookmarks.clear"
      ]
    },
    {
      "before": [ "<leader>", "b", "C" ],
      "commands": [
        "bookmarks.clearFromAllFiles"
      ]
    },
    {
      "before": [ "<leader>", "b", "l" ],
      "commands": [
        "bookmarks.list"
      ]
    },
    {
      "before": [ "<leader>", "b", "L" ],
      "commands": [
        "bookmarks.listFromAllFiles"
      ]
    },
    {
      "before": [ "<leader>", "b", "e" ],
      "commands": [
        "bookmarks.toggleLabeled"
      ]
    },
    {
      "before": [ "<leader>", "n" ],
      "commands": [
        ":nohl"
      ]
    },
    {
      "before": [ "<leader>", "H" ],
      "commands": [
        "comment-divider.makeMainHeader"
      ],
    },
    {
      "before": [ "<leader>", "h" ],
      "commands": [
        "comment-divider.makeSubHeader"
      ],
    },
    {
      "before": [ "<leader>", "s" ],
      "commands": [
        "comment-divider.insertSolidLine"
      ],
    },
    // {
    //     "before": ["Enter"],
    //     "after": ["o", "Esc"],
    // },
    {
      "before": [ "space" ],
      "after": [ "i", "space", "Esc" ],
    },
    {
      "before": [ "-" ],
      "after": [ "@", "@" ],
    },
    {
      "before": [ "g", "n" ],
      "commands": [
        "editor.action.rename"
      ]
    },
    {
      "before": [ "g", "a", "i" ],
      "commands": [
        "merge-conflict.accept.incoming"
      ]
    },
    {
      "before": [ "g", "a", "c" ],
      "commands": [
        "merge-conflict.accept.current"
      ]
    },
    {
      "before": [ "g", "a", "b" ],
      "commands": [
        "merge-conflict.accept.both"
      ]
    },
    {
      "before": [ "g", "a", "a", "i" ],
      "commands": [
        "merge-conflict.accept.all-incoming"
      ]
    },
    {
      "before": [ "g", "a", "a", "c" ],
      "commands": [
        "merge-conflict.accept.all-current"
      ]
    },
    {
      "before": [ "g", "a", "a", "b" ],
      "commands": [
        "merge-conflict.accept.all-both"
      ]
    }
